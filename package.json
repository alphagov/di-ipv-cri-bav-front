{
  "name": "ipv-cri-bav-front",
  "version": "0.0.1",
  "description": "Frontend for the identify proving and bank account verification CRI",
  "main": "index.js",
  "engines": {
    "node": "18.*",
    "yarn": "1.22.*"
  },
  "scripts": {
    "start": "node src/app.js",
    "start:ci": "API_BASE_URL=http://127.0.0.1:8090 REDIS_SESSION_URL= NODE_ENV=development node src/app.js",
    "start:debug": "DEBUG=* node src/app.js",
    "build": "yarn build-sass && yarn build-js",
    "build-sass": "rm -rf dist/public/style.css && sass --no-source-map src/assets/scss/application.scss dist/public/stylesheets/application.css --style compressed",
    "build-js": "yarn build-js:application && yarn build-js:all",
    "build-js:application": "mkdir -p dist/public/javascripts; uglifyjs src/assets/javascripts/application.js --beautify -o dist/public/javascripts/application.js",
    "build-js:all": "mkdir -p dist/public/javascripts; uglifyjs node_modules/govuk-frontend/govuk/all.js node_modules/hmpo-components/all.js --beautify -o dist/public/javascripts/all.js",
    "lint": "eslint .",
    "prettier": "prettier \"**/*.{js,md}\" --check",
    "prettier:fix": "yarn prettier --write",
    "format": "yarn prettier:fix && yarn lint",
    "mocks": "yarn run wiremock --verbose --port 8090 --root-dir test/mocks",
    "test": "node_modules/.bin/jest --testPathPattern=app/bav --coverage",
    "test:coverage": "nyc --reporter=lcov --reporter=text-summary yarn test",
    "test:browser:report": "node ./test/utils/multiReportGenerator.js",
    "test:browser": "wait-on tcp:127.0.0.1:8090 tcp:127.0.0.1:5040 && API_BASE_URL=http://127.0.0.1:8090 cucumber-js test/browser/features/**/*.feature --require test/browser/support/env.js  --require test/browser/support/setup.js --require test/browser/step_definitions/**/*.js -f json:./test/reports/cucumber_report.json",
    "test:browser:ci": "npm-run-all -p -r start:ci mocks test:browser && npm run test:browser:report"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/govuk-one-login/ipv-cri-bav-front"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/govuk-one-login/ipv-cri-bav-front/issues"
  },
  "homepage": "https://github.com/govuk-one-login/ipv-cri-bav-front#readme",
  "packageManager": "yarn@1.22.21",
  "devDependencies": {
    "eslint": "8.43.0",
    "eslint-config-prettier": "8.8.0",
    "prettier": "2.8.8",
    "sass": "1.63.6",
    "uglify-js": "3.17.4",
    "@cucumber/cucumber": "^10.0.1",
    "@jest/globals": "^29.7.0",
    "@playwright/test": "1.39.0",
    "jest-cucumber": "^3.0.1",
    "multiple-cucumber-html-reporter": "^3.4.0",
    "npm-run-all": "^4.1.5",
    "wiremock": "2.35.0"
  },
  "dependencies": {
    "@aws-sdk/lib-dynamodb": "3.363.0",
    "axios": "^1.6.0",
    "cfenv": "1.2.4",
    "connect-dynamodb": "^2.0.6",
    "copyfiles": "2.4.1",
    "di-ipv-cri-common-express": "alphagov/di-ipv-cri-common-express.git#v4.0.0",
    "dotenv": "16.3.1",
    "express": "4.18.2",
    "express-async-errors": "3.1.1",
    "express-session": "^1.17.3",
    "govuk-frontend": "4.3.1",
    "hmpo-app": "3.0.1",
    "hmpo-components": "^6.2.0",
    "hmpo-config": "3.0.0",
    "hmpo-form-wizard": "^13.0.0",
    "hmpo-i18n": "6.0.1",
    "hmpo-logger": "7.0.1",
    "jest": "^29.5.0",
    "nunjucks": "3.2.4",
    "nyc": "15.1.0",
    "playwright": "1.35.1",
    "wait-on": "7.0.1",
    "reqres": "3.0.1"
  }
}